<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <joint name="laser_joint" type="fixed">
        <parent link="chassis"/>
        <child link="laser_frame"/>
        <origin xyz="0.1 0 0.155" rpy="0 0 0"/>
    </joint>

    <link name="laser_frame">
        <visual>
            <geometry>
                <cylinder radius="0.035" length="0.02"/>
            </geometry>
            <material name="red"/>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.035" length="0.02"/>
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.05" radius="0.025" length="0.02">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
    
    <gazebo reference="laser_frame">
        <material>Gazebo/Red</material>
        <sensor name="laser" type="ray">
            <pose> 0 0 0 0 0 0 </pose>
            <visualize> false </visualize>
            <update_rate> 10</update_rate>
            <ray>
                <scan>
                    <horizontal>
                        <samples>360</samples>          <!--Number of samples per scan-->
                        <resolution>1</resolution>
                        <min_angle>-3.14</min_angle>    <!--Min angle -pi-->
                        <max_angle>3.14</max_angle>     <!--Max angle pi-->
                    </horizontal>
                </scan>
                <range>
                    <min>0.3</min>                      <!--Min range-->
                    <max>12</max>                       <!--Max range-->
                </range>
            </ray>
            <plugin name="laser_controller" filename="libgazebo_ros_ray_sensor.so">
                <ros>
                    <argument>~/out:=lidar_scan</argument>    <!--Topic name-->
                </ros>
                <output_type>sensor_msgs/LaserScan</output_type>    <!--ros message service for Lidar-->
                <frame_name>Laser Frame</frame_name>
            </plugin>
        </sensor>
    </gazebo>

</robot>